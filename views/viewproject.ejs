<style>
    .taskbox{
        border: 1px solid rgb(93,172,189);
        height: 18%;
        width: 90%;
        margin-left: 5%;
        margin-top: 6%;        
    }
#page-content::-webkit-scrollbar {
    display: none;
}    
#screen1{
    display: flex;
    width: 100%;
    height: 35vh;
}
#screen2{
    display: flex;
    width: 100%;
    height: 75vh;
    justify-content: space-evenly;
}
#screen3{
    display: flex;
    width: 100%;
    height: 45vh;    
    flex-direction: column;
}
#screen4{
    display: flex;
    width: 100%;
    height: 45vh;    
}
#Tasks_dradr{
    display: flex;
    flex-direction: column;
    width: 45vw;
}
#Requirements{
    border: 1px solid black;
    width: 45vw;
}
#Todo, #Assigned{
    border-right: 1px solid rgb(93,172,189);
    height: 100%;
    width: 33%;
}
#Completed{
    width: 34%;
}
#Todo, #Assigned, #Completed{
    display: flex;
    flex-direction: column;
}
.task-dis-column{
    overflow: scroll;
    -ms-overflow-style: none;
    scrollbar-width: none;         
}
.task-dis-column::-webkit-scrollbar{
    display: none;
}
</style>
<div id="page-content" style="overflow: scroll;">    
    <div id="screen1">
        <div id="slider"></div>
    </div>
    <div id="screen2">
        <div id="Tasks_dradr">
            <div style="display: flex; width: 43vw; justify-content: space-evenly;">
                <div>
                    <button style="position: relative; top: 25%; background-color: transparent; color: rgb(93,172,189); border: 1px solid rgb(93,172,189); cursor: pointer;" id="Create_task">Create New Task</button>
                </div>
                <div style="font-size: 200%;">Tasks</div>
                <div>
                    <button style="position: relative; top: 25%; background-color: transparent; color: rgb(93,172,189); border: 1px solid rgb(93,172,189); cursor: pointer;" id="Auto_assign">Auto assign</button>
                </div>
            </div>
            <script>
                function allowDrop(ev) {
                    ev.preventDefault();
                }
                function drag(ev) {
                    ev.dataTransfer.setData("text", ev.target.id);
                }
                function drop(ev) {
                    ev.preventDefault();
                    var data = ev.dataTransfer.getData("text");
                    ev.target.appendChild(document.getElementById(data));
                    // update using ajax request at server                                                                                                      
                }                                
            </script>
            <div style="display: flex; border: 1px solid rgb(93,172,189); height: 100%; width: 100%;">
                <div id="Todo">
                    <div style="font-size: 150%; border-bottom: 1px solid; text-align: center;">Todo Tasks</div>
                    <div id="tlist1" class="task-dis-column" ondrop="drop(event)" ondragover="allowDrop(event)" style="overflow: scroll; height: 95%;">
                    </div>
                </div>
                <div id="Assigned">
                    <div style="font-size: 150%; border-bottom: 1px solid; text-align: center;">Assigned Tasks</div>
                    <div id="tlist2" class="task-dis-column" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
                </div>
                <div id="Completed">
                    <div style="font-size: 150%; border-bottom: 1px solid; text-align: center;">Completed Tasks</div>
                    <div id="tlist3" class="task-dis-column" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
                </div>
            </div>
        </div>
        <div id="Requirements">
            <h2></h2>
            <div style="display: flex;">
                <div></div>
                <div></div>
            </div>
        </div>
    </div>
    <div id="screen3">
        <div id="Invite New People"></div>
        <div id="Productivity and Predcition"></div>
        <div id="Feedback"></div>
    </div>
    <div id="screen4">
        <div id="Team_Heading"></div>
        <div id="Team Display"></div>
    </div>
</div>
<script>
    document.getElementById('Create_task').addEventListener('click',function(){
        var task_ele=document.createElement('div')
        task_ele.setAttribute('class', 'taskbox')
        task_ele.setAttribute('draggable', 'true')
        task_ele.setAttribute('ondragstart', 'drag(event)')
        task_ele.setAttribute('id', 'adoufgbsdogf')
        document.getElementById('tlist1').appendChild(task_ele)
        
    })
</script>